-- MASTER UI LOADER WITH UI SELECTOR
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Create Selector Panel
local selectorGui = Instance.new("ScreenGui", playerGui)
selectorGui.Name = "UISelector"
selectorGui.ResetOnSpawn = false

local selectorFrame = Instance.new("Frame", selectorGui)
selectorFrame.Size = UDim2.new(0, 180, 0, 120)
selectorFrame.Position = UDim2.new(0.5, -90, 0.5, -60)
selectorFrame.BackgroundColor3 = Color3.fromRGB(44, 62, 80)
selectorFrame.Active = true
selectorFrame.Draggable = true
Instance.new("UICorner", selectorFrame).CornerRadius = UDim.new(0, 10)

local function createSelectorButton(text, yOffset)
 local btn = Instance.new("TextButton", selectorFrame)
 btn.Size = UDim2.new(1, -20, 0, 40)
 btn.Position = UDim2.new(0, 10, 0, yOffset)
 btn.BackgroundColor3 = Color3.fromRGB(52, 152, 219)
 btn.TextColor3 = Color3.new(1, 1, 1)
 btn.Font = Enum.Font.GothamBold
 btn.TextScaled = true
 btn.Text = text
 Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 8)
 return btn
end

local openFreezeTradeBtn = createSelectorButton("Open Freeze Trade UI", 10)
local openLuluHubBtn = createSelectorButton("Open Lulu Hub UI", 60)

-- Attempt to load FreezeGui, fallback to dummy UI if it fails
local success, freezeGui = pcall(function()
    return loadstring(game:HttpGet("https://codeberg.org/GrowAFilipino/GrowAGarden/raw/branch/main/FreezeGui.lua"))()
end)

if not success or typeof(freezeGui) ~= "Instance" then
    warn("Using fallback FreezeGui")
    freezeGui = Instance.new("ScreenGui")
    freezeGui.Name = "FreezeGui"
    local label = Instance.new("TextLabel", freezeGui)
    label.Size = UDim2.new(1, 0, 1, 0)
    label.Text = "Freeze GUI Placeholder"
    label.TextColor3 = Color3.new(1,1,1)
    label.BackgroundTransparency = 1
    label.TextScaled = true
end

freezeGui.Parent = playerGui
freezeGui.Enabled = false

-- Attempt to load Spawner, fallback to dummy function
local Spawner
local spawnerSuccess, spawnerResult = pcall(function()
    return loadstring(game:HttpGet("https://codeberg.org/GrowAFilipino/GrowAGarden/raw/branch/main/Spawner.lua"))()
end)

if not spawnerSuccess or type(spawnerResult) ~= "table" or not spawnerResult.SpawnPet then
    warn("Using fallback Spawner")
    Spawner = {
        SpawnPet = function(petName, x, y)
            print("[Spawner] Pretend spawning:", petName)
        end
    }
else
    Spawner = spawnerResult
end

-- Lulu Hub UI loader continues (append actual LuluHub code below if needed)
-- You can re-integrate the full LuluHub UI script after this fallback setup
